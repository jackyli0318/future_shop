<main role="main" class="container">
    <table id="cartTable" class="table table-hover table-condensed">
        <thead>
            <tr>
                <th scope="col" class="w-50">Product</th>
                <th scope="col" class="text-center">Price</th>
                <th scope="col" class="text-center">Quantity</th>
                <th scope="col" class="text-center">Subtotal</th>
            </tr>
        </thead>
        <tbody>
            {{#each cart}}
            <tr scope="row">
                <td data-th="Product">
                    <div class="row">
                        <div class="col-sm-10">
                            <h4 class="nomargin">{{{product.name}}}</h4>
                            <p>{{{product.description}}}</p>
                        </div>
                    </div>
                </td>
                <td class="text-center" data-th="Price">$<span data-id="{{{product._id}}}" class="unitPrice">{{product.price}}</span></td>
                <td class="text-center" data-th="Quantity">
                    <input type="number" id="quantity" class="updateQuantity form-control text-center" data-id="{{{product._id}}}" value="{{{quantity}}}">
                </td>
                <td data-th="Subtotal" class="text-center">$<span data-id="{{{product._id}}}" class="subTotal">{{multiply product.price quantity}}</span></td>
            </tr>
            {{/each}}

        </tbody>
        <tfoot>
            <tr>
                <td>
                    <a href="/" class="btn btn-warning">
                        <i class="fa fa-angle-left"></i> Continue Shopping</a>
                </td>
                <td colspan="1" class="hidden-xs"></td>
                <td class="hidden-xs text-center">
                    <strong>Total $</strong><strong id="totalPrice">{{totalPrice}}</strong>
                </td>
                <td>
                    <a id="checkoutButton" href="/cart/checkout" class="btn btn-success btn-block">Checkout
                        <i class="fa fa-angle-right"></i>
                    </a>
                </td>
            </tr>
        </tfoot>
    </table>
    {{#if message}}
    <div class="alert alert-danger" role="alert" id="errorMsg">{{message}}</div>
    {{/if}}
</main>